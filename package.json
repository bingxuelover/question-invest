{
  "name": "html",
  "version": "1.0.0",
  "description": "webpack less bootstrap",
  "main": "index.js",
  "scripts": {
    "start": "node index.js",
    "webpack": "webpack --config webpack.config.js",
    "web": "webpack --progress --colors",
    "web:watch": "webpack --progress --colors --watch",
    "web:server": "webpack-dev-server --progress --colors",
    "lint": "eslint public/js",
    "server": "browser-sync start --server 'public' --files 'public'",
    "less": "less-watch-compiler public/less public/css",
    "css:view": "lessc public/less/view.css public/css/view.css --clean-css",
    "css:view-common": "lessc public/less/view-common.css public/css/view-common.css --clean-css",
    "css:text": "lessc public/less/text.css public/css/text.css --clean-css",
    "css:common": "lessc public/less/common.less public/css/common.css --clean-css",
    "build:css": "npm run css:view & npm run css:common & npm run css:text & npm run css:view-common",
    "watch:css": "watch 'npm run build:css' public/less",
    "uglify": "mkdir -p dist/js && uglifyjs public/js/*.js -m -o dist/js/app.js && uglifyjs public/js/*.js -m -c -o dist/js/app.min.js",
    "build:js": "npm run uglify",
    "build:jss": "npm run lint && npm run uglify",
    "watch:js": "onchange 'public/js/jquery.*.js'  -- npm run build:js",
    "watch": "npm run watch:css & npm run watch:js",
    "build": "npm run build:css && npm run build:js",
    "lessver": "npm run server & npm run less"
  },
  "author": "sophie",
  "license": "ISC",
  "devDependencies": {
    "browser-sync": "^2.18.12",
    "buffer": "^5.0.6",
    "clipboard": "^1.7.1",
    "css-loader": "^0.28.4",
    "eslint": "^4.1.1",
    "express": "^4.15.3",
    "extract-text-webpack-plugin": "^2.1.2",
    "gulp": "^3.9.1",
    "less": "^2.7.2",
    "less-loader": "^4.0.4",
    "less-plugin-clean-css": "^1.5.1",
    "less-watch-compiler": "^1.6.7",
    "onchange": "^3.2.1",
    "parallelshell": "^3.0.1",
    "style-loader": "^0.18.2",
    "uglify-js": "^3.0.23",
    "watch": "^1.0.2",
    "webpack": "^2.6.1",
    "webpack-dev-server": "^2.5.0"
  },
  "dependencies": {
    "clipboard": "^1.7.1"
  }
}
